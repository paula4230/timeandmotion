
<%= form_with(model: project, method: :post) do |f|%>
      <div>
        <%= f.label 'RxC', :RxC %>
        <%= f.text_field :RxC %>
    </div>

    <div>
        <%= f.label :project_type %>
        <%= f.text_area :project_type %>
    </div>

    <div >
        <%= f.label :state %>
        <%= f.text_area :state %>
    </div>

    <div>
        <%= f.label :ticket_level %>
        <%= f.number_field :ticket_level %>
    </div>

    <div>
        <%= f.label :classification %>
        <%= f.text_area :classification %>
    </div>

    <div>
        <%= f.label :intent %>
        <%= f.text_area :intent %>
    </div>

    <div>
        <%= f.label :workflow_date %>
        <%= f.date_field :workflow_date %>
    </div>

    <div>
        <%= f.number_field :user_id, id: :project_user_id, value: current_user.id, type: :hidden %>
    </div>

    <div>
        <%= f.submit %>
    </div>

<% end %>
