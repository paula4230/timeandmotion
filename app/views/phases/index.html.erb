<div>
<%= link_to 'New Phase', new_project_phase_path(@project, @phase)%>
</div>

    <%= @project.RxC %>
    <%= @project.classification %>
    <%= @project.project_type %>
    <%= @project.state %>
    <%= @project.ticket_level %>
    <% if @project.hours_spent != nil %>
        <%= @project.hours_spent.ceil(2) %>
    <% end %>


<table>
    <tr>
        <td>Step</td>
        <td></td>
        <td>Start Time</td>
        <td>End Time</td>
        <td>Duration (min)</td>
        <td>Remarks</td>
    </tr>

    

    <% @project.phases.each do |phase| %>
    <tr>
        <td><%= phase.step %><td>
        <% if phase.start_time == nil %>
            <td><%= render partial: '/phases/form_start', locals: { phase: phase } %></td>
        <% end %>
        <td><%= phase.start_time.in_time_zone(current_user.time_zone) %></td>
        <% if phase.end_time == nil && phase.start_time != nil %>
            <td><%= render partial: '/phases/form_end', locals: { phase: phase } %></td>
        <% end %>
        <td><%= phase.end_time.in_time_zone(current_user.time_zone) %></td>
        <td><%= phase.durationinmin %></td>
        <td><%= phase.remarks %></td>
        <td><%= phase.id %></td>
    </tr>
    <% end %>

</table>
Total in Mins: 
<% if @final[0] != nil %>
    <%= @final[0].ceil(2) %>
<% end %>
<td><%= render partial: '/phases/finalize_phases', locals: { project: @project } %></td>

