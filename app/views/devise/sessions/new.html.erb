<body class ='bg-dark'>
  <div id = 'layoutAuthentication'>
    <div id = 'layoutAuthentication_content'>
      <main>
        <div class ='container'>
          <div class ='row justify-content-center'>
            <div class ='col-lg-5'>
            <div class= 'card shadow-lg border-0 rounded-lg mt-5' >
              <div class ='card-header'>
                <h1 class='text-center font-weight-light my-4'>RxMotion</h1>
              </div>

              <div class ='card-body'>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <%# <%= f.label :email, class: 'form-control', id: 'inputEmail'%>
                  <div class = 'form-floating mb-3'>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', id: 'inputEmail' %>
                  </div>

                  <div class = 'form-floating mb-3'>
                    <%# <%= f.label :password %>
                    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', id: 'inputEmail' %>
                  </div>
                  <div class ='form-check mb-3'>
                    <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me, class: 'form-check-input', id:'inputRememberPassword' %>
                    <%= f.label :remember_me, class: 'form-check-label' %>
                    <% end %>
                  </div>
                  </div>

                  <div class = 'btn-login'>
                    <div class ='submit-login'>
                      <div class= 'submit-login-btn'>
                      <%= f.submit "Login", class:'btn btn-dark'%>
                    </div>
                    </div>
                  </div>
                <% end %>
                  
                  
                

              <div class='card-footer text-center py-3'>
                <div class='small'>
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <a class ='small'> <%= link_to "Forgot your password?", new_password_path(resource_name) %></a>
                  <% end %>
                  <br>
                <%# <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%# <%= link_to "Need an Account? Sign Up!", new_registration_path(resource_name) %>
                <%# <% end %> 
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</body>
